<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_album_item_bg">

    <TextView
        android:id="@+id/order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="0"
        android:textSize="26sp"
        android:layout_centerVertical="true"
        android:textColor="@color/sub_text_title"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/order_text"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="我是大标题"
            android:layout_marginRight="80dp"
            android:textSize="20dp"
            android:ellipsize="end"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_item_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_text_title"
                android:text="14.4万"
                android:drawableLeft="@mipmap/detail_little_play"
                android:drawablePadding="4dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/detail_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/sub_text_title"
                android:text="00:00"
                android:drawableLeft="@mipmap/detail_little_sound"
                android:drawablePadding="4dp"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/detail_item_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="2019-7-15"
        android:textColor="@color/sub_text_title"
        android:textSize="16sp"/>
</RelativeLayout>